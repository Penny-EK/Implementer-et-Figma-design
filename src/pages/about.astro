---
import Layout from "@layouts/Layout.astro";
import HeroBgWrapper from "@components/helpers/HeroBgWrapper.astro";
import SectionWrapper from "@components/containers/SectionWrapper.astro";
import CoreValues from "@components/CoreValues.astro";
import EmployeesContainer from "@components/containers/EmployeesContainer.astro";
import DropDown from "@components/DropDown.astro";

// img
import about from "@assets/images/about.jpg";
import { Image } from "astro:assets";
---

<Layout Title="About">
  <HeroBgWrapper imagePath="abouthero.jpg">
    <p>About</p>
    <h1>Creative Services For Boost Your Business Growth</h1>
  </HeroBgWrapper>
  <SectionWrapper Padding="93px 0">
    <div class="grid1-1">
      <div class="col">
        <div class="tagline"><p>Our vision</p></div>
        <h2>Turn your ideas into reality</h2>
        <p>Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps.</p>
        <ul class="checkmarks">
          <li>Bring to the table win-win survival strategies to ensure proactive domination. At the end of the day.</li>
          <li>Capitalize on low hanging fruit to identify a ballpark value added activity to beta test override the digital.</li>
        </ul>
      </div>
      <div class="col">
        <Image class="img" src={about} alt="What to expect illustration" width={488} height={346} />
      </div>
    </div>

    <dl class="statsContainer">
      <div>
        <dt>Successful Work</dt>
        <dd>1128+</dd>
      </div>
      <div>
        <dt>Team members</dt>
        <dd>908+</dd>
      </div>
      <div>
        <dt>Happy customers</dt>
        <dd>258+</dd>
      </div>
      <div>
        <dt>Creative Idea</dt>
        <dd>564+</dd>
      </div>
    </dl>
  </SectionWrapper>
  <SectionWrapper Background="lightgray" Padding="100px 0">
    <CoreValues Type="purewhite" />
  </SectionWrapper>
  <SectionWrapper Padding="100px 0">
    <div class="grid1-1">
      <div class="col">
        <div class="tagline"><p>Our Team</p></div>
        <h2>We champion the bold to achieve the extraordinary</h2>
        <p>Our success stems from the synergy between dedicated teams and our valued clients. We prioritize a company culture that fosters exceptional productivity, ensures customer satisfaction, and promotes mutual respect among all team members.</p>
      </div>
    </div>
    <EmployeesContainer Limit="3" />
  </SectionWrapper>
  <SectionWrapper>
    <div class="lightgray faq">
      <div class="tagline">
        <p>FAQ</p>
        <h2>Customer Questions</h2>
      </div>
      <DropDown />
    </div>
  </SectionWrapper>
</Layout>

<style>
  .statsContainer {
    margin: 3rem;
    text-align: center;
    display: flex;
    justify-content: space-between;
    gap: 3rem;

    > * {
      display: flex;
      flex-direction: column-reverse;
      font-size: 1.125rem;
      color: #181818;

      :last-child {
        font-size: 3.125rem;
        font-weight: 500;
      }
    }
  }
  li {
    margin: 10px 0;
  }
  .img {
    border-radius: var(--border-radius);
  }

  .faq {
    padding: 150px;
    border-radius: var(--border-radius);
    h2 {
      text-align: center;
    }
    .tagline {
      text-align: center;
    }
  }
</style>
