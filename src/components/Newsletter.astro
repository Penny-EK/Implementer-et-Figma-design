---
import Button from "./Button.astro";
---

<article>
  <div class="newsletter-text">
    <h2>Subscribe our newsletter</h2>
    <p>Build stronger Customer Relationships with Consultalk</p>
  </div>
  <div class="newsletter-form">
    <input type="text" placeholder="your mail address" />
    <Button Type="yellow">Subscribe</Button>
  </div>
</article>

<style>
  article {
    background-color: var(--primary03);
    display: flex;
    flex-direction: row;
    gap: clamp(20px, 4vw, 40px);
    padding: clamp(30px, 5vw, 85px);
    border-radius: var(--border-radius);
    justify-content: space-between;
    align-items: center;
    margin: 45px 0 70px 0;

    * {
      color: var(--secondary02);
    }
  }

  .newsletter-text {
    flex: 1;
    min-width: 0;

    h2 {
      font-size: clamp(1.5rem, 3vw, 2.1875rem);
      margin-bottom: 0.5rem;
      line-height: 1.2;
    }

    p {
      font-size: clamp(0.875rem, 2vw, 1rem);
      opacity: 0.9;
    }
  }

  .newsletter-form {
    display: flex;
    gap: clamp(10px, 2vw, 20px);
    flex-wrap: wrap;
    flex: 1;
    min-width: min(100%, 400px);

    input {
      flex: 1;
      min-width: 200px;
      background-color: var(--secondary02);
      border-radius: 4px;
      color: gray;
      padding: clamp(12px, 2vw, 20px);
      font-size: clamp(0.875rem, 2vw, 1rem);
    }
  }

  @media (max-width: 768px) {
    article {
      flex-direction: column;
      text-align: center;
    }

    .newsletter-form {
      width: 100%;
      justify-content: center;

      :global(.yellow) {
        width: 100%;
      }
    }

    input {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    article {
      margin: 30px 0;
      padding: 30px 20px;
    }
  }
</style>
