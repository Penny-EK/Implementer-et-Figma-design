---
import Button from "./Button.astro";
---

<article>
  <div>
    <h2>Subscribe our newsletter</h2>
    <p>Build stronger Customer Relationships with Consultalk</p>
  </div>
  <div>
    <input type="text" placeholder="your mail address" />
    <Button Type="yellow">Subscribe</Button>
  </div>
</article>

<style>
  article {
    background-color: var(--primary03);
    display: flex;
    flex-direction: row;
    gap: 20px;
    padding: 85px;
    border-radius: 20px;
    justify-content: space-between;
    align-items: center;
    * {
      color: var(--secondary02);
    }
    input {
      background-color: var(--secondary02);
      border-radius: 4px;
      max-width: 311px;
    }
    h2 {
      font-size: 2.1875rem;
    }
    div + div {
      display: flex;
      gap: 20px;
    }
  }
</style>
