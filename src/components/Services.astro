---
//@ts-nocheck
import servicesData from "@data/services.json";
console.log(servicesData);
import Button from "./Button.astro";
---

<ul>
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <Button Type="black">{service.buttonText}</Button>
      </li>
    ))
  }
</ul>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5625rem;
  }
  @layer components {
    li {
      margin-top: -150px;
      display: flex;
      padding: 2.875rem;
      flex-direction: column;
      gap: 0.625rem;

      border-radius: 1.25rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(38, 38, 38, 0.9);
      backdrop-filter: blur(16px);
      h2 {
        color: #fff;
        font-family: Cabin;
        font-size: 1.5625rem;
        font-style: normal;
        font-weight: 600;
        line-height: 116%; /* 1.8125rem */
      }
      p {
        color: #fff;
        font-family: Lato;
        font-size: 1rem;
        font-style: normal;
        font-weight: 400;
        line-height: 147.5%; /* 1.475rem */
      }
    }
  }
</style>
