---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
import Button from "./Button.astro";
import SectionWrapper from "./containers/SectionWrapper.astro";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <Button Type="white">Book a meeting</Button>
  </div>
  <Image src={CEOImage} alt="CEO" />
</section>
<div class="main">
  <Services />
</div>

<style>
  /* Styles her */
  @layer components {
    .hero {
      background-color: #f3f4f6;
      display: grid;
      background-color: var(--primary03);
      grid-column: edge;
      grid-template-columns: repeat(2, 1fr);
      h1 {
        color: var(--secondary02);
      }
      p {
        color: var(--secondary02);
      }
    }
    .main {
      grid-column: main;
      display: grid;
    }
    .inner {
      grid-column: main;
    }
  }
</style>
