---
import Button from "./Button.astro";
---

<header>
  <div class="inner">
    <a href="index.html">
      <h1>AskExperts</h1>
    </a>
    <nav>
      <a href="/index.html">Home</a>
      <a href="/case">Case Study</a>
      <a href="/team"> Team</a>
      <a href="/about">About</a>
    </nav>
    <Button Type="yellow">Login</Button>
  </div>
</header>

<style>
  header {
    background-color: var(--primary03Opacity);
    padding: 40px 0;
    grid-column: edge;
    display: grid;
    grid-template-columns: subgrid;
    height: fit-content;
  }

  .inner {
    grid-column: main;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    h1 {
      color: #fff;
      margin: 0;
      font-size: 30px;
    }
  }
  a {
    color: var(--secondary02);
    text-decoration: none;
    margin: 0px 10px;
  }
</style>
