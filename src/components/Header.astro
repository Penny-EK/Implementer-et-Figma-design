---
import Button from "./Button.astro";
---

<header>
  <div class="header-inner">
    <a href="index.html">
      <h1>AskExperts</h1>
    </a>
    <nav>
      <a href="/index.html">Home</a>
      <a href="/case">Case Study</a>
      <a href="/team"> Team</a>
      <a href="/about">About</a>
    </nav>
    <Button Type="yellow">Login</Button>
  </div>
</header>

<style>
  header {
    background-color: var(--primary03Opacity);
    padding: 2.375rem 0;

    grid-column: edge;
    display: grid;
    grid-template-columns: subgrid;
  }

  header > * {
    grid-column: main;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  header h1 {
    color: #fff;
    margin: 0;
  }

  header a {
    color: var(--secondary02);
    text-decoration: none;
  }
</style>
