---
import Button from "./Button.astro";
---

<div class="overlay">
  <div class="popUp">
    <h2>Dashboard login</h2>
    <form action="">
      <div>
        <label for="email">Email adress</label>
        <input type="email" id="email" />
      </div>
      <div>
        <label for="password">Password</label>
        <input type="password" id="password" />
      </div>
    </form>
    <Button Type="yellow">Go to Dashboard</Button>
  </div>
</div>
<style>
  @layer components {
    .overlay {
      display: flex;
      position: fixed;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      backdrop-filter: blur(16px);
      z-index: 10;
      place-content: center;
      align-items: center;
    }
    .popUp {
      display: flex;
      padding: 80px 100px;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 20px;
      border-radius: 30px;
      background: #181818;
    }
    input {
      border-radius: 4px;
      border: 1px solid #e3e3e3;
      background: var(--secondary02);
      display: flex;
      height: fit-content;
      padding: 20px;
      width: 100%;
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
      align-self: stretch;
    }
    label {
      color: #fff;
      font-family: Cabin;
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 116%; /* 20.88px */
    }
    form {
      display: grid;
      width: 100%;
      gap: 20px;
    }
    h2 {
      color: var(--secondary02);
    }
  }
</style>
